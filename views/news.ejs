      <table id='news'>
        <% news.map(entry => { %>
          <tr>
            <td class='info'><%= entry.date.getMonth()+1 %>/<%= entry.date.getDate() %>/<%= entry.date.getYear()-100 %> by <%= entry.author %></td>
            <td class='entry'><%- entry.content %></td>
          </tr>
        <% }) %>
      </table>
      <div id='moreless'>
        <a id='prevLink' href='/news/<%= previousPage %>'>Previous</a>
        <span> || </span>
        <a id='nextLink' href='/news/<%= nextPage %>'>Next</a>
      </div>
    </div>
    <script>
      const currentPage = <%= currentPage %>;
      const totalEntries = <%= totalEntries %>;

      if ( currentPage == 0 ) {
        document.getElementById('prevLink').removeAttribute('href');
        document.getElementById('prevLink').classList.add('unclicky');
      }
      if ( totalEntries <= (currentPage+1 ) * 5 ) {
        document.getElementById('nextLink').removeAttribute('href');
        document.getElementById('nextLink').classList.add('unclicky')
      }
    </script>
<% include partials/footer %>
